{
  "manifest_version": 3,
  "name": "ContentToPopup Test",
  "version": "1.0",
  "permissions": ["tabs", "storage", "downloads", "activeTab", "scripting"],
  "host_permissions":["<all_urls>"],
  "web_accessible_resources": [{
    "resources": ["screenshot.html", "side_panel.html", "side_panel.js"],
    "matches": [
              "https://*/*",
              "http://*/*"
    ],
    "exclude_matches": [
        "*://*.google.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.facebook.com/*"
    ]
  }],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
      "js": ["content.js"],
      "matches": [
          "https://*/*pdf",
          "http://*/*pdf"
      ],
      "exclude_matches": [
          "*://*.google.com/*",
          "*://*.stackoverflow.com/*",
          "*://*.facebook.com/*"
      ]
  }]
}
